# Custom White Button
<WhiteButton@ButtonBehavior+Label>:
    # color for the button
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            # background color
            rgba: (1, 1, 1, 1) if self.state == 'normal' else (.9, .9, .9, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        # Creating the border of the button
        # Color:
        #     rgba: 0, 0, 0, .05
        # Line:
        #     width: .5
        #     rectangle: self.x, self.y, self.width, self.height

